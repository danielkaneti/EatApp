<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/postFragment">

    <fragment
        android:id="@+id/postFragment"
        android:name="com.example.eat.fragments.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post" >
        <action
            android:id="@+id/action_postFragment_pop"
            app:popUpTo="@id/postListFragment2"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/postListFragment2"
        android:name="com.example.eat.fragments.PostListFragment"
        android:label="fragment_post_list"
        tools:layout="@layout/fragment_post_list" >
        <action
            android:id="@+id/action_postList_to_postDetails"
            app:destination="@id/postDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.example.eat.fragments.PostDetailsFragment"
        android:label="fragment_post_details"
        tools:layout="@layout/fragment_post_details" >
        <action
            android:id="@+id/action_postDetails_to_postList"
            app:destination="@id/postListFragment2" />
        <action
            android:id="@+id/action_postDetailsFragment_pop"
            app:popUpTo="@id/postListFragment2"
            app:popUpToInclusive="true" />
        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>
</navigation>