<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundfit"
    tools:context=".Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/eatapp_logo" />
        <EditText
            android:id="@+id/register_activity_user_edit_text"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/ic_action_user"
            android:ems="10"
            android:hint="User name"
            android:textColor="@color/black"
            android:textColorHint="#150E0E" />
        <EditText
            android:id="@+id/register_activity_email_edit_text"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/ic_action_email"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="#150E0E" />

        <EditText
            android:id="@+id/register_activity_password_edit_text"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"

            android:drawableLeft="@drawable/ic_action_key"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#150E0E" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/register_activity_profile_image_view"
            android:layout_width="88dp"
            android:layout_height="82dp"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="16dp"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic_placeholder"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/register_activity_logo_image_view"
            app:layout_constraintStart_toStartOf="@+id/register_activity_logo_image_view"
            app:layout_constraintTop_toBottomOf="@+id/register_activity_logo_image_view"
            app:srcCompat="@drawable/profile_pic_placeholder"
            tools:srcCompat="@drawable/profile_pic_placeholder" />

        <Button
            android:id="@+id/register_newaccount_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:text="Register"
            android:visibility="visible"
            app:backgroundTint="#306A98"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/register_activity_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.8"
            android:background="#1A4157"
            android:hapticFeedbackEnabled="false"
            android:padding="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>